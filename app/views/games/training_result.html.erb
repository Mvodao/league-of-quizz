<div class="container vh-100 d-flex flex-column justify-content-center align-items-center">
    <div class="title text-center pt-4">
        <h1 class="fade-in-scale" style="color: rgb(255, 145, 77);">Your score</h1>
    </div>
    <div class="card card-result align-items-center bounce-effect" style="background-color: transparent;">
      <div class="card-body" style=' background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("<%= asset_path("background_avatar.png") %>")'>
        <h5 class="text-center slide-in px-3"  style="color: rgb(255, 145, 77);">
          <%= @current_user.user.username %>
        </h5>
          <%= image_tag "player-cards/player1.png", class: "card-result-avatar glow-effect"%>
        <h5 class="text-center slide-in px-3" style="color: rgb(255, 145, 77);">
          Score: <%= current_user.score %>
        </h5>
      </div>
    </div>
    <div class="d-grid gap-2 col-6 mx-auto mt-4">
        <%= link_to 'NEW GAME', categories_path, class: "btn-grad pop-hover" %>
        <%= link_to 'HOME', root_path, class: "btn-grad pop-hover" %>
    </div>
</div>
