<div class="container vh-100 d-flex flex-column justify-content-center align-items-center">
    <div class="title text-center pt-4">
        <h1 class="fade-in-scale" style="color: rgb(255, 145, 77);">Your score: <%= current_user.score %>/<%=@questions.count%></h1>
    </div>
    <div class="card card-result align-items-center bounce-effect" style="background-color: transparent;">
      <div class="card-body-wrapper glow-effect">
      <div class="card-result-avatar" style=' background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("<%= asset_path("background_avatar.png") %>")'>
          <%= image_tag "player-cards/player1.png", class: "img-result-avatar" %>
      </div>
      </div>
    </div>
    <h5 class="text-center slide-in px-3 mt-3" style="color: rgb(255, 145, 77);">
      <%= @current_user.user.username %>
    </h5>
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
      <div class="btn-group mx-auto mt-5">
        <%= link_to 'New game', categories_path, class: "btn-training-result mt-1 pop-hover" %>
        <%= link_to 'Home', root_path, class: "btn-training-result mt-1 pop-hover" %>
      </div>
    </div>
</div>
